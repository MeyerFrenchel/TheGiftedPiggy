---
import Badge from "@components/ui/Badge.astro";
import { useTranslations } from "@i18n/utils";
import type { Lang } from "@i18n/ui";
import type { Tables } from "@lib/database.types";

interface Props {
  product: Tables<"products">;
  lang?: Lang;
}

const { product, lang = "ro" } = Astro.props;
const t = useTranslations(lang);

const name = lang === "en" ? (product.name_en ?? product.name) : product.name;
const description = lang === "en" ? (product.description_en ?? product.description) : product.description;
const { price, currency, image_url, image_alt, category, in_stock, featured } = product;

const formattedPrice = new Intl.NumberFormat("ro-RO", {
  style: "currency",
  currency: currency,
  minimumFractionDigits: 0,
}).format(price);

// Serialize product data for the modal (use translated name/description)
const modalProduct = JSON.stringify({
  ...product,
  name,
  description,
});
---

<button
  type="button"
  class="product-card-trigger group bg-card rounded-[var(--radius-lg)] border border-theme overflow-hidden card-hover flex flex-col w-full text-left cursor-pointer"
  data-product={modalProduct}
  aria-label={`Ver detalii: ${name}`}
>
  <!-- Product Image -->
  <div class="relative overflow-hidden aspect-square w-full">
    {
      image_url ? (
        <img
          src={image_url}
          alt={image_alt ?? name}
          width={400}
          height={400}
          class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-105"
          loading="lazy"
        />
      ) : (
        <div class="w-full h-full bg-[var(--color-cream-dark)] flex items-center justify-center">
          <span class="text-6xl" aria-hidden="true">üéÅ</span>
        </div>
      )
    }
    {featured && (
      <div class="absolute top-3 left-3">
        <Badge variant="gold">‚òÖ Featured</Badge>
      </div>
    )}
    {!in_stock && (
      <div class="absolute inset-0 bg-black/40 flex items-center justify-center">
        <Badge variant="default" class="text-sm">{t("products.outOfStock")}</Badge>
      </div>
    )}

    <!-- Hover overlay hint -->
    <div class="card-view-hint">
      <span class="view-hint-text">Vezi detalii</span>
    </div>
  </div>

  <!-- Product Info -->
  <div class="p-5 flex flex-col flex-1">
    {category && (
      <Badge variant="terracotta" class="mb-2 self-start">{category}</Badge>
    )}
    <h2
      class="text-base font-semibold text-primary mb-2 group-hover:text-terracotta transition-colors line-clamp-2"
      style="font-family: var(--font-heading);"
    >
      {name}
    </h2>
    {
      description && (
        <p class="text-sm text-muted line-clamp-3 mb-4 flex-1">{description}</p>
      )
    }
    <div class="mt-auto flex items-center justify-between">
      <span class="text-lg font-bold text-terracotta">{formattedPrice}</span>
      <span class="text-xs text-muted">
        {in_stock ? t("products.inStock") : t("products.outOfStock")}
      </span>
    </div>
  </div>
</button>

<style>
  .product-card-trigger {
    border: none;
    padding: 0;
    background: none;
    -webkit-appearance: none;
    appearance: none;
  }

  /* Hover overlay */
  .card-view-hint {
    position: absolute;
    inset: 0;
    background: rgba(30, 18, 10, 0);
    display: flex;
    align-items: center;
    justify-content: center;
    transition: background 0.25s ease;
    pointer-events: none;
  }

  .view-hint-text {
    font-size: 0.8rem;
    font-weight: 700;
    letter-spacing: 0.08em;
    text-transform: uppercase;
    color: #fff;
    padding: 0.45rem 1rem;
    border-radius: 99px;
    border: 1.5px solid rgba(255, 255, 255, 0.6);
    background: rgba(188, 108, 74, 0.75);
    opacity: 0;
    transform: scale(0.88);
    transition: opacity 0.22s ease, transform 0.22s cubic-bezier(0.22, 1, 0.36, 1);
  }

  .product-card-trigger:hover .card-view-hint {
    background: rgba(30, 18, 10, 0.12);
  }

  .product-card-trigger:hover .view-hint-text {
    opacity: 1;
    transform: scale(1);
  }
</style>

<script>
  document.querySelectorAll<HTMLButtonElement>('.product-card-trigger').forEach((btn) => {
    btn.addEventListener('click', () => {
      try {
        const raw = btn.dataset.product;
        if (!raw) return;
        const product = JSON.parse(raw);
        document.dispatchEvent(new CustomEvent('open-product-modal', { detail: product }));
      } catch {
        // silently ignore parse errors
      }
    });
  });
</script>
