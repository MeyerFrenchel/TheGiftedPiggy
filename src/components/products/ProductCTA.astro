---
import Button from "@components/ui/Button.astro";
import { useTranslations } from "@i18n/utils";
import { siteConfig } from "@data/site-config";
import type { Lang } from "@i18n/ui";

interface Props {
  lang?: Lang;
}

const { lang = "ro" } = Astro.props;
const t = useTranslations(lang);
---

<section
  class="my-12 rounded-[var(--radius-lg)] bg-gradient-to-br from-[var(--color-blush)] to-[var(--color-cream-dark)] p-8 text-center border border-[rgba(198,123,92,0.2)]"
>
  <p class="text-3xl mb-3" aria-hidden="true">üê∑</p>
  <h2
    class="text-2xl font-bold text-primary mb-3"
    style="font-family: var(--font-heading);"
  >
    {t("products.contact.cta")}
  </h2>
  <p class="text-muted mb-6 max-w-md mx-auto">
    {t("products.contact.text")}
  </p>
  <div class="flex flex-wrap items-center justify-center gap-3">
    <Button href={`mailto:${siteConfig.contact.email}`} variant="primary" size="lg">
      <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
        <rect width="20" height="16" x="2" y="4" rx="2"></rect>
        <path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"></path>
      </svg>
      {t("contact.email")}
    </Button>
    <Button href={siteConfig.contact.instagram} variant="outline" size="lg">
      <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
        <rect width="20" height="20" x="2" y="2" rx="5" ry="5"></rect>
        <path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"></path>
        <line x1="17.5" x2="17.51" y1="6.5" y2="6.5"></line>
      </svg>
      Instagram
    </Button>
  </div>
</section>
