---
interface Props {
  class?: string;
  hover?: boolean;
  padding?: "none" | "sm" | "md" | "lg";
}

const { class: className, hover = true, padding = "md" } = Astro.props;

const paddings = {
  none: "",
  sm: "p-4",
  md: "p-6",
  lg: "p-8",
};
---

<div
  class:list={[
    "bg-card rounded-[var(--radius-lg)] border border-theme",
    hover && "card-hover cursor-pointer",
    paddings[padding],
    className,
  ]}
>
  <slot />
</div>
